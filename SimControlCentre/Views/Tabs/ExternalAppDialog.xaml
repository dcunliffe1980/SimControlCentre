<Window x:Class="SimControlCentre.Views.Tabs.ExternalAppDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="External Application" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Name="DialogTitle"
                   Text="Add Application" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Executable Path -->
                <TextBlock Text="Executable Path:" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="ExecutablePathBox" 
                             Grid.Column="0"
                             Padding="5"
                             Margin="0,0,5,0"
                             ToolTip="Full path to the executable"/>
                    <Button Grid.Column="1" 
                            Content="Browse..." 
                            Click="BrowseExecutable_Click"
                            Padding="10,5"/>
                </Grid>

                <!-- Name -->
                <TextBlock Text="Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Name="NameBox" 
                         Padding="5"
                         Margin="0,0,0,15"
                         ToolTip="Display name for the application"/>

                <!-- Arguments -->
                <TextBlock Text="Arguments (optional):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Name="ArgumentsBox" 
                         Padding="5"
                         Margin="0,0,0,15"
                         ToolTip="Command line arguments"/>

                <!-- Options -->
                <StackPanel Name="StartWithRacingSection">
                    <CheckBox Name="StartWithiRacingCheckBox" 
                             Content="Start with sim" 
                             IsChecked="True"
                             Margin="0,0,0,5"/>
                    
                    <CheckBox Name="StopWithiRacingCheckBox" 
                             Content="Stop with sim" 
                             IsChecked="True"
                             Margin="0,0,0,5"/>
                    
                    <CheckBox Name="StartHiddenCheckBox" 
                             Content="Start hidden (minimized)" 
                             Margin="0,0,0,15"/>
                </StackPanel>
                
                <StackPanel Name="StopForRacingSection">
                    <TextBlock Text="Restart Options:" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <CheckBox Name="RestartWhenIRacingStopsCheckBox" 
                             Content="Restart when sim stops" 
                             IsChecked="True"
                             Margin="0,0,0,5"
                             ToolTip="Automatically restart this app after sim closes"/>
                    
                    <CheckBox Name="RestartHiddenCheckBox" 
                             Content="Close window after restart" 
                             IsChecked="True"
                             Margin="0,0,0,15"
                             ToolTip="Close the app's window after restarting (keeps it in system tray)"/>
                    
                    <TextBlock Text="Delay Restart (seconds):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Name="DelayRestartBox" 
                             Text="2"
                             Padding="5"
                             Margin="0,0,0,15"
                             ToolTip="Wait this many seconds after sim stops before restarting"/>
                </StackPanel>
                
                <Separator Margin="0,0,0,15"/>

                <!-- Delays -->
                <StackPanel Name="DelaysSection">
                    <TextBlock Text="Delay Start (seconds):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Name="DelayStartBox" 
                             Text="0"
                             Padding="5"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Delay Stop (seconds):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Name="DelayStopBox" 
                             Text="120"
                             Padding="5"
                             Margin="0,0,0,15"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Save" 
                    Click="Save_Click"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    Padding="20,8"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
