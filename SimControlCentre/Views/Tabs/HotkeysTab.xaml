<UserControl x:Class="SimControlCentre.Views.Tabs.HotkeysTab"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="800">
<ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="10">
        <TextBlock Text="Device Control" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
            
        <!-- No plugins available warning -->
        <Border x:Name="NoPluginsWarning"
                Background="#FFEBEE"
                BorderBrush="#D32F2F"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,15"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Foreground="#D32F2F" Margin="0,0,0,5">
                    No Device Control Plugins Available
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="#D32F2F" FontSize="11">
                    No device control plugins are currently enabled. Enable a plugin in Settings > Plugins to configure hotkeys and device control.
                </TextBlock>
            </StackPanel>
        </Border>
            
        <!-- Hotkeys content panel - displays plugin-provided UI -->
        <StackPanel x:Name="HotkeysContentPanel">
            <!-- Generic Hotkeys Section -->
            <GroupBox Header="Hotkeys Configuration" Padding="10" Margin="0,0,0,20">
                <StackPanel x:Name="GenericHotkeysPanel">
                    <!-- Will be populated dynamically with generic hotkeys -->
                </StackPanel>
            </GroupBox>
            
            <!-- Plugin-specific configuration UI -->
            <Border x:Name="PluginConfigContainer" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,20">
                <ContentControl x:Name="PluginConfigContent"/>
            </Border>
        </StackPanel>
    </StackPanel>
</ScrollViewer>
</UserControl>

