<UserControl x:Class="SimControlCentre.Views.Tabs.HotkeysTab"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="800">
<ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="10">
        <TextBlock Text="Device Control" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
            
        <!-- No plugins available warning -->
        <Border x:Name="NoPluginsWarning"
                Background="#FFEBEE"
                BorderBrush="#D32F2F"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,15"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Foreground="#D32F2F" Margin="0,0,0,5">
                    No Device Control Plugins Available
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="#D32F2F" FontSize="11">
                    No device control plugins are currently enabled. Enable a plugin in Settings > Plugins to configure hotkeys and device control.
                </TextBlock>
            </StackPanel>
        </Border>
            
        <!-- Hotkeys content panel -->
        <StackPanel x:Name="HotkeysContentPanel">
            
        <!-- Volume Hotkeys -->
        <GroupBox Header="Volume Hotkeys" Padding="10" Margin="0,0,0,20">
            <StackPanel>
                <!-- Channel Management -->
                <Border Background="#F5F5F5" Padding="8" Margin="0,0,0,10" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Manage Channels" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="ChannelComboBox" Width="150" Margin="0,0,10,0">
                                <ComboBoxItem Content="Game" Tag="Game"/>
                                <ComboBoxItem Content="Music" Tag="Music"/>
                                <ComboBoxItem Content="Chat" Tag="Chat"/>
                                <ComboBoxItem Content="System" Tag="System"/>
                            </ComboBox>
                            <Button Content="Add Channel" Click="AddChannel_Click" Padding="8,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Volume Hotkeys List -->
                <StackPanel x:Name="VolumeHotkeysPanel">

                    <!-- Will be populated dynamically -->
                </StackPanel>
            </StackPanel>
        </GroupBox>
            
            <!-- Profile Hotkeys -->
            <GroupBox Header="Profile Hotkeys" Padding="10">
                <StackPanel>
                    <!-- Profile Management -->
                    <Border Background="#F5F5F5" Padding="8" Margin="0,0,0,10" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Manage Profiles" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <ComboBox x:Name="ProfileComboBox" Width="150" Margin="0,0,10,0"/>
                                <Button Content="Add Profile" Click="AddProfile_Click" Padding="8,4" Margin="0,0,5,0"/>
                                <Button Content="?? Refresh" Click="RefreshProfiles_Click" Padding="8,4" 
                                        ToolTip="Reload profiles from device"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Profile Hotkeys List -->
                    <StackPanel x:Name="ProfileHotkeysPanel">

                        <!-- Will be populated dynamically -->
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            </StackPanel> <!-- End HotkeysContentPanel -->

        </StackPanel>
    </ScrollViewer>
</UserControl>
