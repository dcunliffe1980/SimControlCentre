<UserControl x:Class="SimControlCentre.Views.Tabs.AboutTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="SimControlCentre" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Version 1.0.0" 
                       FontSize="14" 
                       Foreground="Gray"
                       Margin="0,0,0,20"/>
            
            <TextBlock TextWrapping="Wrap" 
                       Margin="0,0,0,20">
                GoXLR Control Center with keyboard hotkeys and controller button support.
                Control your TC-Helicon GoXLR from anywhere in Windows.
            </TextBlock>
            
            <GroupBox Header="Configuration" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Configuration File:" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock Name="ConfigPathText" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    
                    <Button Name="OpenConfigFolderBtn" 
                            Content="Open Config Folder" 
                            Click="OpenConfigFolder_Click"
                            Padding="10,5"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Links" Padding="10">
                <StackPanel>
                    <TextBlock>
                        <Hyperlink NavigateUri="https://github.com/dcunliffe1980/SimControlCentre" 
                                   RequestNavigate="Hyperlink_RequestNavigate">
                            GitHub Repository
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Margin="0,10,0,0">
                        <Hyperlink NavigateUri="https://github.com/dcunliffe1980/SimControlCentre/blob/master/QUICKSTART.md" 
                                   RequestNavigate="Hyperlink_RequestNavigate">
                            Quick Start Guide
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
