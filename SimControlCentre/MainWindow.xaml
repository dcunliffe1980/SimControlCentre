<Window x:Class="SimControlCentre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimControlCentre"
        xmlns:tabs="clr-namespace:SimControlCentre.Views.Tabs"
        mc:Ignorable="d"
        Title="SimControlCentre - Settings" Height="700" Width="900"
        MinHeight="500" MinWidth="700">
    <Grid>
        <TabControl Margin="10">
            <!-- General Tab -->
            <TabItem Header="General" x:Name="GeneralTabItem"/>
            
            <!-- Hotkeys Tab -->
            <TabItem Header="Hotkeys" x:Name="HotkeysTabItem"/>
            
            <!-- Channels & Profiles Tab -->
            <TabItem Header="Channels &amp; Profiles" x:Name="ChannelsProfilesTabItem"/>
            
            <!-- Controllers Tab -->
            <TabItem Header="Controllers" x:Name="ControllersTabItem"/>
            
            <!-- About Tab -->
            <TabItem Header="About" x:Name="AboutTabItem"/>
        </TabControl>
    </Grid>
</Window>
